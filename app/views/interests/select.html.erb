<h1>Update Your Profile By Selecting Your Interests</h1>

<%= form_tag save_prefs_interests_path do %>
<div class="checkbox-wrap ten columns">
  <% @interests.each do |interest| %>
    <div class="checkbox"><%= check_box_tag interest.name, 1, if current_user.interests.include?(interest) then true else false end %>
    <%= label_tag interest.name, nil, class: "checkbox" %>
    </div>
  <% end %>
  <%= submit_tag %>
</div>
<% end %>
